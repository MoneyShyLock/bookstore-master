                </when>
              </choose>
            </foreach>
          </trim>
        </if>
      </foreach>
    </where>
  </sql>
  <sql id="Base_Column_List" >
    id, name, status, created, updated, parent, is_parent
  </sql>
  <select id="getCountCategories" resultType="com.bookstore.pojo.vo.BookCategoryVo">
    SELECT COUNT(1),
bc.name FROM
book b LEFT JOIN
book_category bc
on b.category_id=bc.id
GROUP BY b.category_id
  </select>
</mapper>